<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:orientation="vertical"
        android:background="@color/ghost_white">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#B1A6A6">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/txt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20sp"/>
        <EditText
            android:id="@+id/edt_name_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên quán"
            android:backgroundTint="@color/black"
            android:textColorHint="@color/silver"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor_edt"
            android:layout_marginHorizontal="20sp"/>
        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor_edt"
            android:backgroundTint="@color/black"
            android:textColorHint="@color/silver"
            android:layout_marginHorizontal="20sp"/>
        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tài khoản"
            android:textCursorDrawable="@drawable/color_cursor_edt"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:textColorHint="@color/silver"
            android:layout_marginHorizontal="20sp"/>
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:backgroundTint="@color/black"
            android:textCursorDrawable="@drawable/color_cursor_edt"
            android:textColorHint="@color/silver"
            android:layout_marginHorizontal="20sp"/>
        <EditText
            android:id="@+id/edt_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/color_cursor_edt"
            android:backgroundTint="@color/black"
            android:textColorHint="@color/silver"
            android:layout_marginHorizontal="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text=" Đăng ký "
            android:enabled="false"
            android:background="@drawable/rounded_white_state_enable_btn"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            app:backgroundTint="@null" />
    </LinearLayout>
</layout>